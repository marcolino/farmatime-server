  "version": "0.2.0",
  "configurations": [
    {
      "name": "Docker Node.js launch",
      "type": "docker",
      "request": "launch",
      "preLaunchTask": "docker-run: debug",
      "platform": "node"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Mocha Tests",
      "runtimeExecutable": "yarn",
      "runtimeArgs": ["run", "mocha"],
      "args": [
        "-u",
        "bdd",
        "--timeout",
        "10000",
        "--colors",
        "${workspaceFolder}/test/**/*.js"
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "cwd": "${workspaceFolder}"
    },
    {
      "args": [
        "-u",
        "bdd",
        "--timeout",
        "10000",
        "--colors",
        "${workspaceFolder}/test/controllers/auth.test"
      ],
      "internalConsoleOptions": "openOnSessionStart",
      "name": "Mocha Tests (auth only)",
      //"program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
      "runtimeExecutable": "yarn",
      "runtimeArgs": ["run", "mocha"],
      "request": "launch",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "type": "node"
    },
    {
      "args": [
        "-u",
        "bdd",
        "--timeout",
        "10000",
        "--colors",
        "${workspaceFolder}/test/controllers/user.test"
      ],
      "internalConsoleOptions": "openOnSessionStart",
      "name": "Mocha Tests (user only)",
      //"program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
      "runtimeExecutable": "yarn",
      "runtimeArgs": ["run", "mocha"],
      "request": "launch",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "type": "node"
    },
    {
      "args": [
        "-u",
        "bdd",
        "--timeout",
        "10000",
        "--colors",
        "${workspaceFolder}/test/controllers/payment.test"
      ],
      "internalConsoleOptions": "openOnSessionStart",
      "name": "Mocha Tests (payment only)",
      //"program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
      "runtimeExecutable": "yarn",
      "runtimeArgs": ["run", "mocha"],
      "request": "launch",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "type": "node"
    },
    {
      "args": [
        "-u",
        "bdd",
        "--timeout",
        "10000",
        "--colors",
        "${workspaceFolder}/test/models/"
      ],
      "internalConsoleOptions": "openOnSessionStart",
      "name": "Mocha Tests (models only)",
      //"program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
      "runtimeExecutable": "yarn",
      "runtimeArgs": ["run", "mocha"],
      "request": "launch",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "type": "node"
    },
    {
      "args": [
        "-u",
        "bdd",
        "--timeout",
        "10000",
        "--colors",
        "${workspaceFolder}/test/libs/environment"
      ],
      "internalConsoleOptions": "openOnSessionStart",
      "name": "Mocha Tests (libs/environment only)",
      //"program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
      "runtimeExecutable": "yarn",
      "runtimeArgs": ["run", "mocha"],
      "request": "launch",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "type": "node"
    },
    {
      "type": "node", //"pwa-node",
      "request": "launch",
      "name": "Launch Program",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "program": "${workspaceFolder}/server.js"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Express App",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/server.js",
      "runtimeExecutable": "yarn",
      "runtimeArgs": ["start-dev"],
      "console": "integratedTerminal", // to show logs in console
      "outputCapture": "std", // ensures stdout/stderr are shown
      "env": {
        "NODE_ENV": "development"
      }
    }
  ]
}