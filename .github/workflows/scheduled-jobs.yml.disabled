name: Scheduled Jobs

env: # Global constants for all jobs/steps
  JOB_RUNNER_URL_STAGING: https://farmaperte-staging.fly.dev/api/request/runJobs
  JOB_RUNNER_URL_PROD: https://farmaperte-prod.fly.dev/api/request/runJobs
  JOB_RUNNER_VERB: POST
  WORKER_KEY: ${{ secrets.WORKER_KEY }}

on:
  schedule:
    - cron: "1 0 * * *" # every day at 00:01 UTC
  workflow_dispatch: # allow manual trigger

jobs:
  run-jobs:
    runs-on: ubuntu-latest
    steps:
      - name: Call farmaperte-staging job runner
        run: |
          curl -X "$JOB_RUNNER_VERB" "$JOB_RUNNER_URL_STAGING" -H "x-worker-key: $WORKER_KEY"
      - name: Call farmaperte-prod job runner
        run: |
          curl -X "$JOB_RUNNER_VERB" "$JOB_RUNNER_URL_PROD" -H "x-worker-key: $WORKER_KEY"
